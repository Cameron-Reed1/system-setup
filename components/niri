#!/usr/bin/env bash

dependencies="hypr/hypridle hypr/hyprlock hypr/hyprpaper mako waybar"
packages="niri hyprpolkitagent xdg-desktop-portal-gtk xdg-desktop-portal-gnome xwayland-satellite"

config="niri/config.kdl"


function post_install() {
    if [ -z "$EXTRAS_DIR" ] || [ ! -d "$EXTRAS_DIR" ]; then
        exit_with_err "\$EXTRAS_DIR is not set or is not a directory"
    fi

    copy $EXTRAS_DIR/scripts/hypr/import_env.sh $HOME/scripts/hypr/import_env.sh
    copy $EXTRAS_DIR/scripts/wmenu/logout.sh $HOME/scripts/wmenu/logout.sh
    chmod 755 $HOME/scripts/hypr/import_env.sh $HOME/scripts/wmenu/logout.sh
}
